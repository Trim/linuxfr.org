= article_for news do |c|
  - c.title = "#{link_to news.section.title, news.section, class: "topic"} #{link_to news.title, [:redaction, news]}".html_safe
  - c.meta  = news_posted_by(news, true)
  - c.image = link_to(image_tag(news.section.image, alt: news.section.title), news.section)
  - c.body  = capture do
    = news.body
    %ul
      = render news.links
    = news.second_part
